{
  "name": "@weilasdk/ui",
  "version": "0.0.1",
  "private": true,
  "description": "集成了 Weila SDK 的 UI 组件",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build:css": "pnpm exec postcss src/style.postcss.css -o dist/index.css",
    "build": "tsdown && pnpm build:css",
    "dev": "tsdown --watch",
    "typecheck": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@weilasdk/core": "workspace:*"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18",
    "tsdown": "0.20.0-beta.3",
    "typescript": "^5.9.3",
    "unplugin-vue": "^7.1.0",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.0"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  }
}
