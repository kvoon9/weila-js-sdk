{
  "name": "@weilasdk/monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r run build",
    "build:core": "pnpm --filter @weilasdk/core run build",
    "build:ui": "pnpm --filter @weilasdk/ui run build",
    "dev": "pnpm --filter @weilasdk/playground-vue3 run dev",
    "dev:ui": "pnpm --filter @weilasdk/ui run dev",
    "story": "pnpm --filter @weilasdk/ui run story",
    "build:story": "pnpm --filter @weilasdk/ui run build:story",
    "typecheck": "pnpm -r run typecheck",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check"
  },
  "devDependencies": {
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.15.0",
    "simple-git-hooks": "^2.13.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*": [
      "oxlint --type-aware",
      "oxfmt"
    ]
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.15.4"
}
